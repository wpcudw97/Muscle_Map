<div class="container">
  <div class="row">
    <div class="col" style="margin-top:20px">
    <h2>検索結果</h2>

    <table class="table table-hover table-inverse">
      <% if @range == "Menu" %>
        <thead>
          <tr>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @menus.each do |menu| %>
            <tr>
              <td><%= link_to menu.title, menu_path(menu.id) %></td>
            </tr>
          <% end %>
        </tbody>
      <% else %>
        <thead>
          <tr>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title, post_path(post.id) %></td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </div>
  </div>
</div>