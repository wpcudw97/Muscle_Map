<div class="container">
  <div class="row">
    <div class="col head-margin">
      <h2>会員一覧</h2>

      <table class="table table-hover">
        <thead>
          <tr class="table-secondary">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user.id), class: "text-dark", style: "padding: 1px; border-bottom: solid 1px black;"%></td>
              <td><%= user.email %></td>
              <td><%= user.is_deleted %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>

    </div><!-- /.head-margin -->
  </div>
</div>