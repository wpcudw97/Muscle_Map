<div class="container">
  <div class="row">
    <div class="col">

      <h2 style="margin-top:20px"><%= @post.title %></h2>
      <p>
        <%= @user.name %>さん
        <span style="margin-left:20px">
          <%= @post.created_at.strftime('%Y/%m/%d') %>
        </span>
      </p>

      <div class='row'>

        <div class="post-image">
          <%= image_tag @post.get_post_image(500,300) %>
        </div>

        <div class="mx-auto">
          <h3 style="margin-bottom:20px"><%= @post.title %></h3>
          <p class="text-break" style="width: 30rem;"><%= safe_join( @post.body.split("\n"),tag(:br))%></p>
          <div>
            <%= link_to '編集' , edit_admin_post_path(@post.id) , class:"btn btn-success" %>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>