<div class="container">
  <div class="row">
    <div class="col head-margin">

      <% if @comment.errors.any? %>
        <%= @comment.errors.count %>件のエラーが発生しました
        <ul>
          <% @comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <h2>コメント編集</h2>

      <%= form_with model: [@menu, @comment], url: admin_menu_comment_path do |f| %>

        <div class="form-group">
          <%= f.text_area :comment, class: "form-control", rows: "2" %>
        </div>
        <div class="form-group">
          <%= f.submit "保存する", class:"btn btn-success" %>
        </div>

      <% end %>

    </div><!-- /.head-margin -->
  </div>
</div>