<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mx-auto" style="margin-top:20px">メニュー編集</h2>

      <%= form_with model: @menu, url: admin_menu_path(@menu) do |f| %>

        <div class="form-group">
          <%= f.label :menu_image, "画像" %>
          <%= f.file_field :menu_image, accept: "image/*" , class:"form-control-file user_image" , id:"user_profile_image"%>
        </div>

        <div class="form-group">
          <%= f.label :title, "トレーニング名" %>
          <%= f.text_field :title, class:"form-control"  %>
        </div>

        <div class="form-group">
          <%= f.label :genre_id, "ジャンル" %><br>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, options = { include_blank: "--選択してください--"}, class:"form-control"  %>
        </div>

        <div class="form-group">
          <%= f.label :body, "メニュー内容" %>
          <%= f.text_area :body, class:"form-control", rows:"7" %>
        </div>

         <div class="form-group text-center" style="margin-top:20px">
          <%= f.submit "保存する", class:"btn btn-success" %>
          <%= link_to "削除する", admin_menu_path(@menu), method: :delete, "data-confirm" => "本当に削除しますか?", class:"btn btn-danger", style:"margin-left:20px" %>
        </div>

      <% end %>
    </div>
  </div>
</div>