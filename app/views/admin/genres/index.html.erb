<div class="container">
  <div class="row">
    <div class="col" style="margin-top:20px">
    <h3>ジャンル一覧・追加</h3>
    <%= form_with model: @genre, url: admin_genres_path do |f| %>

      <div class="form-group row mb-3" style="margin-top:30px">
        <%= f.label :name, "ジャンル名", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :name, placeholder: "ジャンル名", id:"admin__name" %>
        <span style="margin-left:20px"><%= f.submit '新規登録', class:"btn btn-success" %></span>
      </div>

    <% end %>

    <table class="table">
      <thead>
        <tr class="table-secondary">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>