<div class="container">
  <div class="row">
    <div class="col" style="margin-top:20px">

      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

    <h2>ジャンル一覧・追加</h2>
    <%= form_with model: @genre, url: admin_genres_path do |f| %>

      <div class="form-group" style="margin-top:30px">
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, placeholder: "ジャンル名", class:"form-control name", id:"admin_genre_name" %>
      </div>

      <div class="form-group">
        <%= f.submit '新規登録', class:"btn btn-primary" %>
      </div>

    <% end %>

    <table class="table">
      <thead>
        <tr class="table-secondary">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>