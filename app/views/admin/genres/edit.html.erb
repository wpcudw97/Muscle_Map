<div class="container">
  <div class="row">
    <div class="col" style="margin-top:20px">
    <h3>ジャンル一覧・追加</h3>
    <%= form_with model: @genre, url: admin_genre_path do |f| %>

      <div class="form-group row mb-3" style="margin-top:30px">
        <%= f.label :name, "ジャンル名", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :name, id:"admin_genre_name" %>
        <span style="margin-left:20px"><%= f.submit '変更を保存', class:"btn btn-success" %></span>
        <%= link_to "削除する", admin_genre_path(@genre.id), method: :delete, "data-confirm" => "本当に削除しますか?", class:"btn btn-danger", style:"margin-left:20px" %>
      </div>

    <% end %>
    </div>
  </div>
</div>
