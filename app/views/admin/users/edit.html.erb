<div class="container">
  <h3><%= @user.name %>さんの会員情報編集</h3>

  <div class="row">
    <div class="col" style="margin-top:20px">

      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user, url: admin_user_path do |f| %>

        <div class="row mb-3">
          <div class="col-sm-2 col-form-label"><%= f.label :id, "会員ID" %></div>
          <div class="col-sm-10" style="margin-top:5px"><%= @user.id %></div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-2 col-form-label"><%= f.label :name, "氏名" %></div>
          <div class="col-sm-10"><%= f.text_field :name, class:"form-control name", id:"admin_user_name" %></div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-2 col-form-label"><%= f.label :name_kana, "フリガナ" %></div>
          <div class="col-sm-10"><%= f.text_field :name_kana, class:"form-control name_kana", id:"admin_user_name_kana" %></div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-2 col-form-label"><%= f.label :date_of_birth, "生年月日" %></div>
          <div class="col-sm-10"><%= f.date_select :date_of_birth, {start_year: 1950, end_year: 2023, include_blank: true, use_two_digit_numbers: true}, {class: "input-tab birthday-select"} %></div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-2 col-form-label"><%= f.label :sex_select, "性別" %></div>
          <div class="col-sm-10">
            <%= f.radio_button :sex_select, User.sex_selects.key(0), checked: @user.sex_select == "male" %>
            <%= f.label :sex_select_male, User.sex_selects_i18n[:male], class:"col-sm-2 col-form-label"  %>
            <%= f.radio_button :sex_select, User.sex_selects.key(1), checked: @user.sex_select == "female" %>
            <%= f.label :sex_select_female, User.sex_selects_i18n[:female], class:"col-sm-2 col-form-label"  %>
            <%= f.radio_button :sex_select, User.sex_selects.key(2) , checked: @user.sex_select == "other"%>
            <%= f.label :sex_select_other, User.sex_selects_i18n[:other], class:"col-sm-2 col-form-label"  %>
            <%= f.radio_button :sex_select, User.sex_selects.key(3) %>
            <%= f.label :sex_select_no_answer, User.sex_selects_i18n[:no_answer], checked: @user.sex_select == "no_answer", class:"col-sm-2 col-form-label"  %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-2 col-form-label"><%= f.label :introduction, "自己紹介" %></div>
          <div class="col-sm-10"><%= f.text_field :introduction, class:"form-control" %></div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-2 col-form-label"><%= f.label :email, "email" %></div>
          <div class="col-sm-10"><%= f.text_field :email, class:"form-control email", id:"user_email" %></div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-2 col-form-label"><%= f.label :is_deleted, "会員ステータス" %></div>
          <div class="col-sm-10">
            <%= f.radio_button :is_deleted, :"有効", checked: true %>
            <%= f.label :is_deleted, "有効", value: false, class:"col-sm-2 col-form-label" %>
            <%= f.radio_button :is_deleted, :"退会" %>
            <%= f.label :is_deleted, "退会", value: true, class:"col-sm-2 col-form-label" %>
          </div>
        </div>

        <%= f.submit '変更を保存', class:"btn btn-success" %>

      <% end %>
    </div>
  </div>
</div>