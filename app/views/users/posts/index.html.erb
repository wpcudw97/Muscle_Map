<div class="container">
  <div class="row">
    <div class="col-4" style="margin-top:20px">
    <h3>投稿一覧</h3>
      <div class="" style="margin-top:30px">
        <%= link_to user_path(@user), class:"btn btn-outline-secondary" do %>
          <%= image_tag @user.get_profile_image(100,100) %>
        <% end %>
        <%= link_to user_path(@user) do %>
          <p style="margin-left:10px"><%= @user.name %>さん</p>
        <% end %>
      </div>
      <h4 class="mb-3">投稿する</h2>
      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <h5 class="mb-3">タイトル</h5>
          <%= f.text_field :title, class:"form-control", style:"width:70%", id:"title" %>
        </div>
        <div class="form-group">
          <h5 class="mb-3">本文</h5>
          <%= f.text_area :body, class:"form-control", style:"width:70%", rows:"3", id:"body"%>
        </div>
        <div style="margin-top:20px">
          <%= f.submit "投稿する", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>

    <div class="col-8">
      <h3>投稿一覧</h3>
      <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>ユーザ</th>
          <th>タイトル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <p style="margin-left:10px"><%= image_tag @user.get_profile_image(80,80) %></p>
                <p><%= @user.name %>さん</p>
              <% end %>
            </td>
            <td><%= post.title %></td>
            <td><%= link_to "詳細へ", post_path(post.id) %></td>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>

  </div>
</div>
