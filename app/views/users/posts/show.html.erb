<div class="container">
  <div class="row">
    <div class="col-4" style="margin-top:20px">
    <h3>投稿一覧</h3>
      <div class="" style="margin-top:30px">
        <%= link_to user_path(@user), class:"btn btn-outline-secondary" do %>
          <%= image_tag @user.get_profile_image(100,100) %>
        <% end %>
        <%= link_to user_path(@user) do %>
          <p style="margin-left:10px"><%= @user.name %>さん</p>
        <% end %>
      </div>
      <h4 class="mb-3">投稿する</h2>
      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <h5 class="mb-3">タイトル</h5>
          <%= f.text_field :title, class:"form-control", style:"width:70%", id:"title" %>
        </div>
        <div class="form-group">
          <h5 class="mb-3">本文</h5>
          <%= f.text_area :body, class:"form-control", style:"width:70%", rows:"3", id:"body"%>
        </div>
        <div style="margin-top:20px">
        <%= f.submit "投稿する", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>

    <div class="col-8">
      <h3>投稿一覧</h3>
      <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>本文</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <p style="margin-left:10px"><%= image_tag @user.get_profile_image(80,80) %></p>
                <p><%= @user.name %>さん</p>
              <% end %>
            </td>
            <td><%= link_to @post.title %></td>
            <td><%= @post.body %></td>
            <% if user_signed_in? && current_user.id == @post.user_id %>
              <td><%= link_to 'Edit' , edit_post_path(@post.id) , class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", post_path(@post.id), method: :delete, "data-confirm" => "本当に消しますか?" , class:"btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
      </tbody>
      </table>
    </div>

  </div>
</div>
