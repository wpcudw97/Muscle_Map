<div class='container'>
  <div class='row'>
    <div class="col">

      <h2 class="mx-auto" style="margin-top:20px">ログイン</h2>

      <%= form_with model:@user, url: new_user_session_path do |f| %>
        <div class="form-group">
          <%= f.label :email, "email" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "ログイン" %>
        </div>

        <p>会員登録がお済みでない方は <%= link_to "こちら", new_user_registration_path %> から新規登録を行なってください。</p>

      <% end %>

    </div>
  </div>
</div>