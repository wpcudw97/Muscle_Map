<div class="container">
  <div class="row">
    <div class="col head-margin">
      <h2 class="d-flex justify-content-between mx-auto">
        体重管理
        <%= link_to "体重登録へ", weights_path, class: "btn btn-primary"%>
      </h2>

      <table class="table table-hover">
        <thead>
          <tr class="table-secondary">
            <th>日付</th>
            <th>体重</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @weights.each do |weight| %>
            <tr>
              <td style="vertical-align:middle"><%= weight.created_at.strftime('%Y/%m/%d') %></td>
              <td style="vertical-align:middle"><%= weight.weight %>kg</td>
              <td>
                <%= link_to "編集する", edit_weight_path(weight.id), class:"btn btn-success" %>
                <span class="weight-button"><%= link_to "削除する", weight_path(weight.id), method: :delete, "data-confirm" => "本当に削除しますか?", class:"btn btn-danger" %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>