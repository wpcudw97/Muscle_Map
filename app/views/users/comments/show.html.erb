<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mx-auto" style="margin-top:20px">コメント一覧</h2>
      <%= form_with model: @comment do |f| %>

        <div class="form-group" style="margin-top:30px">
          <h5 class="mb-3">コメント欄</h5>
          <%= f.text_area :comment, class: "form-control", rows: 5 %>
        </div>

        <div style="margin-top:30px">
          <%= f.submit "コメントする", class:"btn btn-success" %>
        </div>
    <% end %>

    <table class="table">
      <thead>
        <tr class="table-secondary">
          <th>ユーザID</th>
          <th>ユーザ名</th>
          <th>コメント</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= @comment.user.id %></td>
            <td><%= @comment.user.name %></td>
            <td><%= comment.comment %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success"  %></td>
          </tr>
          </tr>
        <% end %>
      </tbody>
    </table>

    </div>
  </div>
</div>

