<div class="container">
  <div class="row">
    <div class="col" style="margin-top:20px">
      <h2 style="margin-bottom:20px">検索結果</h2>

      <table class="table table-hover" style="width:50%">
        <% if @range == "Menu" %>
          <thead>
            <tr class="table-secondary">
              <th>投稿ユーザ</th>
              <th>タイトル</th>
            </tr>
          </thead>
          <tbody>
            <% @menus.each do |menu| %>
              <tr>
                <td><%= post.user.name %></td>
                <td><%= link_to menu.title, menu_path(menu.id) %></td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <thead>
            <tr class="table-secondary">
              <th>投稿ユーザ</th>
              <th>タイトル</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.user.name %></td>
                <td><%= link_to post.title, post_path(post.id) %></td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>

    </div>
  </div>
</div>
