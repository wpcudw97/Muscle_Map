<div class="container">
  <div class="row">
    <div class="col head-margin">
      <h2>いいね一覧</h2>

      <table class="table table-hover">
        <thead>
          <tr class="table-secondary">
            <th></th>
            <th></th>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>いいね登録日</th>
          </tr>
        </thead>
        <tbody>
          <% @favorites.each do |favorite| %>
          <tr>
            <td></td>
            <td></td>
            <td><%= favorite.post.user.name %></td>
            <td>
              <%= link_to post_path(favorite.post.id) do %>
                <%= favorite.post.title %>
              <% end %>
            </td>
            <td><%= favorite.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div><!-- /.head-margin -->
  </div>
</div>